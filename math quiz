#include <stdio.h>
int main()
{
    int ans;
    int real_ans;
    int incorrect;
    int correct;
    int temp;
    int i;
    ans = real_ans = temp = incorrect = correct = i = 0;

    for(i=0;i<5;i++)
    {
    if(temp==0)
    {
    real_ans=i+1;
    printf("What is %d+1? \n",i);
    scanf("%d", &ans);

    switch(ans)
    {
    case 1:
        break;
    case 2:
        break;
    case 3:
        break;
    case 4:
        break;
    case 5:
        break;
    case 6:
        break;
    case 7:
        break;
    case 8:
        break;
    case 9:
        break;
    case 0:
        break;

    default:
        temp++;
        printf("You entered an invalid input \n");
    }
}
        if(temp==0)
        {
        if(real_ans==ans)
        {
        correct++;
        printf("Right! the correct answer is %d \n", real_ans);
        }
        else
        {
        incorrect++;
        printf("Wrong! the correct answer is %d \n", real_ans);
        }
      }

}


    if(temp==0)
    {
    printf("This is how many you got correct %d \n", correct);
    printf("This is how many you got incorrect %d \n", incorrect);
    }

    getchar();
    return 0;
}
